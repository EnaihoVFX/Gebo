{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "app.cursor.videocopilot",
  "productName": "video-copilot",
  "version": "0.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      { "label": "main", "title": "Gebo", "width": 800, "height": 600, "resizable": true, "dragDropEnabled": false, "center": true }
    ],
    "security": { 
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$HOME/**", "$DOCUMENT/**", "$DOWNLOAD/**", "$TEMP/**"]
    }
  }
}